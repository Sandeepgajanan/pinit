<% include ./partials/header.ejs %>
<div
  class="w-full min-h-screen bg-zinc-800 text-white px-4 sm:px-6 lg:px-8 py-8"
>
  <div class="cards flex flex-wrap gap-4">
    <% user.posts.forEach(function(elem) { %>
    <div
      class="card w-full sm:w-64 h-auto sm:h-64 rounded-lg overflow-hidden bg-zinc-700"
    >
      <img
        src="/images/uploads/<%= elem.image %>"
        alt="<%= elem.title %>"
        class="w-full h-48 object-cover"
      />
      <h5 class="mt-2 text-sm px-2"><%= elem.title %></h5>
    </div>
    <% }) %>
  </div>
</div>
<% include ./partials/footer.ejs %>
