<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 text-white px-10 py-8">
  <div class="cards flex flex-wrap gap-4">
    <% posts.forEach(function(elem) { %>
    <div class="card w-64 h-64 rounded-lg overflow-hidden">
      <img
        src="/images/uploads/<%= elem.image %>"
        alt="<%= elem.title %>"
        class="w-full h-48 object-cover"
      />

      <h5 class="mt-2 text-sm px-2 text-center"><%= elem.title %></h5>

      <h5 class="mt-2 text-sm px-2 text-center">
        <span class="text-zinc-500 font-semibold"
          >Posted By:<%= elem.user.username %></span
        >
      </h5>
    </div>
    <% }) %>
  </div>
</div>
<% include ./partials/footer.ejs %>
