<% include ./partials/header.ejs %>

<div
  class="w-full min-h-screen bg-zinc-800 px-4 sm:px-6 lg:px-8 py-5 text-white"
>
  <h1 class="text-3xl font-semibold">Create a new post</h1>
  <hr class="opacity-10 m-2" />
  <form
    action="/createpost"
    method="post"
    enctype="multipart/form-data"
    class="space-y-4"
  >
    <input
      type="file"
      name="postimage"
      id=""
      class="block w-full sm:w-2/3 lg:w-1/3 mt-2 rounded-sm px-3 py-2"
    />
    <input
      type="text"
      name="title"
      id=""
      placeholder="Title"
      class="block w-full sm:w-2/3 lg:w-1/3 mt-2 rounded-sm border-2 px-3 py-2 text-black"
    />
    <textarea
      name="description"
      id=""
      placeholder="Description"
      class="block w-full sm:w-2/3 lg:w-1/3 mt-2 rounded-sm border-2 h-60 px-3 py-2 text-black"
    ></textarea>
    <input
      type="submit"
      value="Create Post"
      class="block w-full sm:w-2/3 lg:w-1/3 mt-2 rounded-sm bg-red-600 px-3 py-2"
    />
  </form>
</div>

